{
    "scripts": {
      "lint": "eslint .",
      "lint:fix": "eslint . --fix",
      "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
      "lint:css": "stylelint \"**/*.css\"",
      "lint:css:fix": "stylelint \"**/*.css\" --fix",
      "precommit": "npm run lint && npm run lint:css"
    },
    "devDependencies": {
      "eslint": "^8.55.0",
      "eslint-plugin-node": "^11.1.0",
      "prettier": "^3.1.0",
      "stylelint": "^15.11.0",
      "stylelint-config-standard": "^34.0.0",
      "husky": "^8.0.3",
      "lint-staged": "^15.2.0"
    }
  }